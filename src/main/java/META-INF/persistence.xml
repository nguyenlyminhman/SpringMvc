<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="SpringMvc" transaction-type="RESOURCE_LOCAL">
		<class>vn.com.spring.model.Brand</class>
		<class>vn.com.spring.model.Contact</class>
		<class>vn.com.spring.model.Customer</class>
		<class>vn.com.spring.model.Order</class>
		<class>vn.com.spring.model.OrderDetail</class>
		<class>vn.com.spring.model.Product</class>
		<class>vn.com.spring.model.Staff</class>
		<class>vn.com.spring.model.StaffOrder</class>
		<class>vn.com.spring.model.Style</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/menwatch"/>
			<property name="javax.persistence.jdbc.user" value="postgres"/>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
